
<header class="page-header">
  <h1>Admin &raquo; Dashboard</h1>
</header>

<section class="admin-dashboard">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Total Number of Products</h3>
    </div>
    <div class="panel-body">
      <%= link_to @dashboard[:product_count], [:admin, :products] %>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title">Total Number of Categories</h3>
    </div>
    <div class="panel-body">
      <%= @dashboard[:category_count] %>
    </div>
  </div>

</section>